<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="../css/style.css" />
    <title>Menu Display</title>
  </head>
  <body>
    <style>
       body{
      background-color: rgb(248, 232, 217);
    }
    </style>
    <div class="header">
      <div class="nav">
        <ul>
          <a href="/land"><li>Home</li></a>
          <a href="/staff"><li>Staff</li></a>
          <a href="/menu"><li>Food Menu</li></a>
          <a href="/dining"><li>Book table</li></a>
        </ul>
      </div>
      <div class="account">
        <ul>
          <a href="/land"
            ><li><i class="fa-solid fa-house-chimney"></i></li
          ></a>
          <a href="#"
            ><li><i class="fa-solid fa-user" id="user-lap"></i></li
          ></a>
        </ul>
      </div>
    </div>
    <h1>Menu Display</h1>
    <ul>
      <% menuItems.forEach(item => { %>
      <li>
        <strong><%= item.item_name %></strong>: <%= item.description %> - $<%=
        item.price %>
        <form action="/cart/addItem" method="post">
          <input type="hidden" name="itemId" value="<%= item.item_id %>" />
          <label for="quantity">Quantity:</label>
          <input
            type="number"
            id="quantity"
            name="quantity"
            min="1"
            value="1"
            required
          />
          <button  type="submit">Add to Cart</button>
        </form>
      </li>
      <% }); %>
    </ul>
  </body>
</html>
